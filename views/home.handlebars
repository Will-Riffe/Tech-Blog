<section class="page home">
    <div class="container">

        {{!-- Checks for registered user --}}
        {{#if loggedIn}}

            <h1 
                class="welcome-user" 
                value="{{userId}}">
                Salutations, {{userName}}!
            </h1>

        {{else}}

        <h1>Home</h1>

        {{/if}}

        <p>Community Posts:</p>

        <hr>




        <div 
            class="sub-container">
            <article 
                class="home-container">

                <a 
                    href="/" 
                    class="go-back">
                    &larr; Go Back
                </a>



                <article 
                    class="public-post"
                    value="{{post.id}}">


                    {{! Post Header }}
                    <header 
                        class="post-subject">
                        {{post.title}}
                    </header>
                    <div 
                        class="post-content">
                        {{post.content}}
                    </div>



                    {{! Post Footer }}
                    <div 
                        class="post-footer">
                        {{! Post Footer Content }}
                        <div 
                            class="post-owner-display">
                            <span 
                                class="post-owner">
                                {{post.user.name}}
                            </span>
                            <br />
                            <span 
                                class="post-date">
                                {{post.date_created}}
                            </span>
                        </div>
                    </div>


                </article>




                {{! Posts' Comment Section }}
                <section 
                    class="comment-section"
                    value="{{id}}">
                    <div 
                        class="comment-header">
                        <h3>
                            Comments:
                        </h3>
                    </div>
                    <hr>



                    {{!-- View Full Post --}}
                    <a 
                        href="/dashboard/post/" 
                        id="fullPostPage">
                        View Full Post
                    </a>



                    {{! Section to add a comment}}
                    <div 
                        class="add-a-comment">
                        <h4>
                            Comment here:
                        </h4>
                        <textarea 
                            id="postComment" 
                            maxlength="1500" 
                            name="postComment" 
                            placeholder="Here are my 2Â¢..." 
                            type="text" 
                            required>
                        </textarea>

                        <button 
                            id="postCommentBtn" 
                            for="postComment">
                            Send
                        </button>
                        <hr 
                            class="underline-comment"
                        >
                    </div>



                    {{! The Actual Comments }}
                    <div 
                        class="comment-container">
                        <div 
                            class="preloader-comments">
                            {{! Dynamic Content Appears Here }}
                        </div>
                        <div 
                            class="empty-comment-history">
                            <p>
                                Nothin' here but secrets...
                            </p>
                        </div>
                    </div>


                </section>


            </article>


        </div>
    </div>

</section>
