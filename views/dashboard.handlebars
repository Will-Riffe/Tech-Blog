<body>
    <section class="container">
        <h1>Dashboard</h1>

        <p class="sub-header">
            Let's hear it
            <span id="userName">
                {{userName}}
            </span>!
        </p>

        <hr/>

        <h2>Post Fresh Content</h2>

        {{! Code for making a new post }}
        <form id="post-form">

            {{! Headline Elements }}
            <div class="form-group">
                <label for="post-subject">Subject:</label>
                <input class="form-control post-subject-input" name="title" placeholder="This post is about..." type="text" required />
            </div>

            {{! Post Contents }}
            <div class="form-group">
                <label for="post-content">Content:</label>
                <textarea class="form-control post-content-input" maxlength="10000" name="content" placeholder="Content goes here..." type="text" required></textarea>
            </div>

            {{! Submission Button }}
            <button class="btn btn-primary" id="submitPost" type="submit">POST</button>
        </form>

        <hr/>

        <h2>Your Post History</h2>

        <section class="sub-container" id="pastPosts">
            {{#if posts}}
                {{! If/Else for User Post history cards }}
                {{#each posts as |post|}}
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title bg-dark text-white p-2">{{post.title}}</h5>
                            <p class="card-text text-black">{{post.content}}</p>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <section class="empty-post-history">
                    <p>Nothin' here but shadows...</p>
                </section>
            {{/if}}
        </section>

        <hr/>

        <h2>Your Comments</h2>

        <section class="sub-container" id="pastComments">
            {{#if user.comments}}
                {{! IF/Else for User Comment history Cards }}
                {{#each user.comments}}
                    <div class="card mb-3">
                        <div class="card-body">
                            <p class="card-text">{{this}}</p>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <section class="empty-comment-history">
                    <p>Nothin' here but secrets...</p>
                </section>
            {{/if}}
        </section>
    </section>
</body>
<script src="/js/dashboard/dashboardCom.js"></script>
<script src="/js/dashboard/dashboardPost.js"></script>
<script src="/js/dashboard/dashboardPostUpdate.js"></script>
<script src="/js/dashboard/update-delete.js"></script>
