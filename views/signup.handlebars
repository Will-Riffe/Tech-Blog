<section class="page sign-up">
  <div class="container">

    <h1>Tech Blog</h1>

    <hr />

    <h2>Sign Up!</h2>
    <p>Post and Interact!</p>

    <!-- Signup Form -->
    <form class="sub-container">

      <!-- Username -->
      <div class="form-group">
        <label>Username: <input autocomplete="username" class="userName-signup form-control" maxlength="15" name="name"
            placeholder="My name is... what?" type="text" />
        </label>
      </div>

      <!-- Email -->
      <div class="form-group">
        <label>Email: <input autocomplete="email" class="email-signup form-control" name="email" placeholder="Your email goes here..."
            type="email" />
        </label>
      </div>

      <!-- Password -->
      <div class="form-group">
        <label>Password: <input class="password-signup form-control" minlength="8" name="password"
            placeholder="(8-digit minimum)" type="password" />
        </label>
      </div>

      <!-- Submit Credentials -->
      <input class="btn btn-primary" id="signupSubmit" type="submit" value="Sign Up!" />
    </form>
  </div>
</section>

<script src="/js/sign-up/signupCheck.js"></script>
<script src="/js/sign-up/signupApi.js"></script>